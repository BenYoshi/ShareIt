@model ProfileViewModel

<div class="col-md-4 offset-4">
    <div class="text-center card super_space">
        <h1 class="card-header">@Model.UserName</h1>
        <div class="card-block">
            <p>Email: @Model.Email</p>
            <p>Phone: @Model.Phone</p>

        </div>
        <div class="card-footer">
            <a class="btn btn-primary" asp-action="EditProfile">Edit Profile</a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-6">
        <h3 style="margin: 20px;">Posts</h3>
        @foreach (var post in @Model.Posts)
        {
            <div class="card space">
                <div class="card-block">
                    <a asp-action="Details" asp-route-id="@post.Id">
                        <h4 class="card-header">@post.Title</h4>
                    </a>
                    <p class="space">@post.Content.Substring(0, 80) ...</p>
                </div>
            </div>
        }
    </div>
    <div class="col-md-6">
        <h3 style="margin: 20px;">Comments</h3>
        @foreach (var comment in @Model.Comments)
        {
            <div class="card space">
                <div class="card-block">
                    <p>@comment.Content</p>
                </div>
                <h4 class="card-header">Commenting on: <a asp-action="Details" asp-route-id="@comment.Post.Id">@comment.Post.Title</a></h4>
            </div>
        }
    </div>
</div>